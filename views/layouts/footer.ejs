<script>
  const form = document.getElementById('subscribe-form');
  const sbEmailId = document.getElementById('sbemail-input');
  form.addEventListener('submit', e => {
    e.preventDefault();
    console.log("prevented")
    validateInput();
  });
  const setError = (element, message) => {
    const inputControl = element.parentElement;
    element.placeholder = message;
    sbEmailId.style.border = '1.5px solid red';
    inputControl.classList.add('error');
    inputControl.classList.remove('success');
  };
  const setSuccess = element => {
    const inputControl = element.parentElement;
    element.placeholder = '';
    inputControl.classList.add('success');
    inputControl.classList.remove('error');
  };
  const isValidEmail = sbEmailId => {
    const re = /^\w+([-+.']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$/;
    return re.test(String(sbEmailId).toLowerCase());
  };
  const validateInput = () => {
    console.log("Entered Validate input");
    const sbEmailIdValue = sbEmailId.value.trim();
    if (sbEmailIdValue === '') {
      setError(sbEmailId, 'Email is required');
    } else if (!isValidEmail(sbEmailIdValue)) {
      //alert('Provide a valid Email address')
      document.getElementById('message-error').innerHTML = 'Provide a valid email address';
    } else {
      console.log("email Ok");
      setSuccess(sbEmailId);
    }
    const input = sbEmailId;
    if (input.parentElement.classList.contains('success')) {
      form.submit();
      // console.log("Form submission successful")
      // alert('Subscription successful');
      // window.location.reload();
    }
  };
</script>
