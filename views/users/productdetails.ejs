<script>
    let errorDiv = document.getElementById('size-error')
    function sizeCheck() {
        let sizeVal = document.getElementById('selectedValueInput').value
        if (sizeVal.length == 0) {
            errorDiv.innerHTML = 'Choose a size'
            return false
        }
        errorDiv.innerHTML = ""
        return true
    }
    function check() {
        if (!sizeCheck()) return false
        return true
    }
</script>
