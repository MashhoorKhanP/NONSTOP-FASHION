<%- include ('../layouts/homeHeader.ejs') -%>
    <section>
        <div class="container mt-5">
            <div class="mb-4">
                <h1>WISHLIST</h1>
            </div>
            <div class="row mt-4">
                <%if(wishlist.length>0){wishlist.forEach((prod)=>{ %>
                    <div class="col-6 col-md-3 mb-4">
                        <div class="card">
                            <div class="image-container">
                                <a href="/productdetails/<%=prod._id %>">
                                    <img src="/assets/product-images/<%=prod.images[0] %>" class="card-img-top"
                                        alt="...">
                                </a>
                            </div>
                            <div class="card-body">
                                <small>
                                    <%= prod.brand %>
                                </small>
                                <p class="card-title prod-name text-uppercase text-nowrap">
                                    <%= prod.name %>
                                </p>
                                <p class="card-text">
                                    <span class="price">₹<%= prod.price %></span>
                                    <span class="dPrice strike-through"><del>₹<%=prod.price + prod.discountPrice %>
                                                </del></span>
                                    <br>
                                    <span class="discount">
                                        <% const discountPercentage=((prod.price - prod.discountPrice) / prod.price) *
                                            100; %>
                                            <%= Math.floor(discountPercentage) %>% off
                                    </span>
                                    <br>
                            </div>
                            <div class="p-3">
                                <div class="mb-3">
                                    <a href="/productdetails/<%=prod._id %>"
                                        class="btn btn-outline-dark w-100 text-center">VIEW PRODUCT</a>
                                </div>
                                <div>
                                    <form action="/wishlist/<%=prod._id%>?location=wishlist" method="post">
                                        <button class="btn btn-outline-dark w-100 text-center"
                                            type="submit">REMOVE</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% })}else {%>
                        <div class="mainDiv text-center container">
                            <h1>Your wishlist is empty!</h1>
                            <img src="/assets/extra-images/b8c99fff9c3edae7f6d3b616d7f3cc6b.gif" width="300rem" class="img-fluid rounded-5" alt="">
                            <div class="mt-3">
                                <a href="/shop" class="rounded-0 btn btn-white border-1 border-dark">GO SHOPPING</a>
                            </div>
                        </div>
            </div>
            <% } %>
        </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
        integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
        crossorigin="anonymous"></script>
    <%- include ('../layouts/footer.ejs') -%>